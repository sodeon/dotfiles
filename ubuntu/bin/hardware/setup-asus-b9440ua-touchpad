#!/bin/bash -ue
# To list devices: xinput --list --short
# To get properties of the device: xinput --list-props 11 # 11 is the mouse id
. log.sh

MOUSE_KEYWORD="ETPS/2.*Touchpad"
MOUSE_ACCEL=0.39

get-mouse-id() { xinput --list --short | grep "$MOUSE_KEYWORD" | awk '{print $6}' | awk -F '=' '{print $2}'; }

mouse_id=`get-mouse-id $MOUSE_KEYWORD`
if [[ -z $mouse_id ]]; then
    notify-send "\$MOUSE_KEYWORD cannot be found with 'xinput --list --short'"
    exit 1
fi
xinput --set-prop $mouse_id 'libinput Accel Speed' $MOUSE_ACCEL
notify-send -u low "Acceleration profile set to $MOUSE_ACCEL"
