#!/bin/bash -u

host=/nas/andy-desktop
remote=andy@andy-desktop

identity=$HOME/.ssh/id_rsa
sshOptions="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"
# sshOptions="-o allow_other -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o debug "
    

sshfs $remote:/ $host -o IdentityFile=$identity $sshOptions \
    && notify-send -u low      "Drive mounted at $host" \
    || notify-send -u critical "Drive mount at $host failed"

