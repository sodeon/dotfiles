#!/bin/bash -ue

mntDst=/mnt/tv
mntSrc="andy@tv:/"

# SSH params
identity=$HOME/.ssh/id_rsa
sshOptions="-o allow_other -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"

sudo sshfs $mntSrc $mntDst -o IdentityFile=$identity $sshOptions \
    && notify-send -u low      "Drive mounted at $mntDst" \
    || notify-send -u critical "Drive mount at $mntDst failed"
