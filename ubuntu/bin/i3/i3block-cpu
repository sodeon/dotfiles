#!/bin/bash -ue

need_loading=1
fold-action  () { echo âš›; } # ðŸ–³
expand-action() { cpu_stat 1 | head -n 1; }
rclick-action() { monitor cpu >/dev/null; }


#-------------------------------------------------------------------------------
# Template
#-------------------------------------------------------------------------------
# Fold/expand status
file_name=`echo $0 | sed 's/^.*\///'`
token="/tmp/$file_name"


if [[ "$BLOCK_BUTTON" = 1 ]]; then
    if [ -f $token ]; then
        rm $token
    else
        touch $token
        [ ! -z $need_loading ] && echo "Loading..." && exit
    fi
elif [[ "$BLOCK_BUTTON" = 3 ]]; then
    rclick-action
fi

if [ -f $token ]; then
    expand-action
else
    fold-action
fi
