#!/bin/bash -ue
WIDTH=${WIDTH-1280}
HEIGHT=${HEIGHT-720}
IP=${IP-}

#----------------------------------------------------------------
# Camera and microphone
#----------------------------------------------------------------
# connect-phonecam
[ -z $IP ] && params="" || params="-i $IP"
$HOME/code/ipwebcam-gst/setup-videochat.sh -w $WIDTH -h $HEIGHT $params


#----------------------------------------------------------------
# Screen recording
#----------------------------------------------------------------
# Combined audio channel of sound output and mcirophone
