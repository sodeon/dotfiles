! Reload Xresources: xrdb ~/.Xresources
! get xft font name: fc-list
! sample urxvt config: https://addy-dclxvi.github.io/post/configuring-urxvt/
! urxvt Perl extension: https://github.com/muennich/urxvt-perls

!-----------------------------------------------------------------
! HiDPI
!-----------------------------------------------------------------
Xft.dpi: 192
Xcursor.size: 128


!-----------------------------------------------------------------
! Color scheme
!-----------------------------------------------------------------
! special
*.foreground: #ffffff
*.background: #000000
!*.cursorColor: #afbfbf

! black
*.color0: #000000
*.color8: #555753

! red
*.color1: #cc0000
*.color9: #ef2929

! green
*.color2: #4e9a06
*.color10: #8ae234

! yellow
*.color3: #c4a000
*.color11: #fce94f

! blue
*.color4: #3465a4
*.color12: #729fcf

! magenta
*.color5: #75507b
*.color13: #ad7fa8

! cyan
*.color6: #06989a
*.color14: #34e2e2

! white
*.color7: #d3d7cf
*.color15: #eeeeec


!-----------------------------------------------------------------
! URxvt Appearance
!-----------------------------------------------------------------
URxvt.font: xft:Consolas NF:style=Book:size=16
URxvt.boldFont: xft:Consolas NF:style=Bold:size=16
URxvt.italicFont: xft:Consolas NF:style=Italic:size=16
URxvt.boldItalicfont: xft:Consolas NF:style=Bold Italic:size=16

URxvt.letterSpace: 0
URxvt.lineSpace: 0

URxvt.geometry: 120x32
! URxvt.internalBorder: 24
! URxvt.cursorBlink: true
! URxvt.cursorUnderline: false
URxvt.saveline: 10000
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
! color depth: 32 will enable transparency
URxvt.depth: 24
URxvt.iso14755: false


!-----------------------------------------------------------------
! URxvt keybindings
!-----------------------------------------------------------------
! Cannot use hyper as modifier as it can conflict with xbindkeys/i3 like hyper+p
!URxvt.modifier: hyper

! Scroll one line
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! Move cursor forward/backward one word
!URxvt.keysym.Control-Up: \033[1;5A
!URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D


!-----------------------------------------------------------------
! URxvt plugins
!-----------------------------------------------------------------
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select

!! Copy Paste (ctrl+shift+c/v)
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.Control-C: perl:clipboard:copy
URxvt.keysym.Control-V: perl:clipboard:paste
!URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

!! Keyboard select (after activating, vim like control and search)
URxvt.keyboard-select.clipboard: true
URxvt.keysym.Control-S: perl:keyboard-select:activate

!! URL select
URxvt.keysym.Control-U: perl:url-select:select_next
URxvt.urlLauncher: google-chrome
URxvt.underlineURLs: true
URxvt.urlButton: 1
