#------------------------------------------------------------------------------
# Settings
#------------------------------------------------------------------------------
# c: command line
# s: status bar
# h: horizontal scrollbar
# v: vertical scrollbar
set guioptions v

set statusbar-h-padding 1 
set statusbar-v-padding 1
set page-padding 1

set scroll-page-aware true

# Color
set recolor-darkcolor  "#FFFFFF"
set recolor-lightcolor "#333333"
set recolor-keephue

set selection-clipboard clipboard # Automatically copy selection to clipboard


#------------------------------------------------------------------------------
# Key bindings
#------------------------------------------------------------------------------
map v     scroll full-up
map c     scroll full-down
map <C-b> scroll half-up
map <C-f> scroll half-down

map i     toggle_index
map d     toggle_page_mode
map -     zoom out
map =     zoom in
map 0     adjust_window best-fit
map z     adjust_window width
map <C-m> recolor # like VSCode
map t     recolor # "t"heme

# Follow link is broken on Ubuntu 19.04
map D     follow
map <C-d> display_link

map x     quit
map q     quit


#------------------------------------------------------------------------------
# Useful default keybindings:
# https://man.cx/zathura(1)
#------------------------------------------------------------------------------
# Tab: index
# nG: go th nth page
# m/': bookmark

# Not used default shortcuts
# space: next page
# f: follow links
# r: rotate
# <C-r>: recolor
# p: print
