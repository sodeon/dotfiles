# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=25
markup=none

[window]
command=xdotool getactivewindow getwindowname || echo ""
color=#aadddd
interval=once
signal=13
separator=false
# separator_block_width=30

[bandwidth]
#instance=eth0
interval=5
color=#888888
separator=false

[mem_stat]
interval=5
command=mem_stat
min_width=14.0G
align=right
separator=false

[cpu_stat]
interval=2
# min_width=100%   35Â°  |  1.0
min_width=100%   35Â°
align=right
command=cpu_stat 2
separator=false
# separator_block_width=7

[brightness]
label=â˜€
color=#66ff66
command=(tail -2 /tmp/brightness || monitor-control b) | head -n 1 # Grab 2nd to last line
interval=once
signal=11
separator=false
# separator_block_width=8

[audio]
label=â™ª
color=#66ff66
command=[ `pulsemixer --get-mute` -eq 1 ] && echo Mute || pulsemixer --get-volume | sed -r 's/\s+.*$//'
interval=once
signal=10
separator=false
# separator_block_width=12

[time]
command=date '+%-m-%d %H:%M'
interval=5
separator=false

[record]
command=sleep 0.25 && pgrep record-screen >/dev/null && pgrep gst-launch-1.0 >/dev/null && echo R || echo "" # Wait a small amount of time for gst-launch-1.0 command to launch
color=#CC4444
interval=once
signal=20

[caffeine]
command=sleep 0.25 && pgrep caffeinate >/dev/null && echo ðŸ˜Ž || echo "" # Wait a small amount of time for caffeinate command to launch
color=#44AADD
interval=once
signal=21

