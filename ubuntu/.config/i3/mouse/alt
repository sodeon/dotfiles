# Scroll wheel
201 -> xte $scru-up 'key Left'  # Left
202 -> xte $scrd-up 'key Right' # Right

$s1+201 -> xte $scru-up 'key j' 'key j' 'key j' # Seek backward (mid step)
$s1+202 -> xte $scrd-up 'key l' 'key l' 'key l' # Seek forward (mid step)

