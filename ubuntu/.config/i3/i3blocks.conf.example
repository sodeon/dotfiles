# label for CPU and memory
#
[system-monitor]
interval=persist
command= echo üñ≥
separator=false
separator_block_width=8

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
# label=Ôãõ üñ≥  üñµ 
interval=2
min_width=99.00%
separator=false

# Memory usage
#
[memory]
interval=5
separator=false
separator_block_width=40


# Network
#
[bandwidth]
#instance=eth0
interval=5
color=#888888
separator=false
separator_block_width=25

# Brightness
#
[brightness]
label=‚òÄ
color=#66ff66
command=monitor-control b
interval=once
signal=11
separator=false
separator_block_width=18

# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[audio]
label=‚ô™
color=#66ff66
command=pulsemixer --get-volume | sed -r 's/\s+.*$//'
interval=once
signal=10
separator=false
separator_block_width=25
#[volume]
#label=‚ô™
#instance=Master
##instance=PCM
#interval=once
#signal=10

# Battery indicator
#
# The battery instance defaults to 0.
#[battery]
#label=‚ö°
##instance=1
#interval=30
#separator=false
#separator_block_width=18

# Date Time
#
[time]
command=date '+%m-%d %H:%M'
interval=5

