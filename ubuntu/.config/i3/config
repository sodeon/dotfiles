# i3 config file (v4)
#
# ,: used for chaining commands using the previous matching window
# ;: usef for chaining commands without using the previous matcheing window
#
# NOTE: To make a window a container, the only way to do is explicitly make it a split container (mod+h/s) then change to desired layout mode (split/tabbed/stacked)

#--------------------------------------------------------------------------------
# Looks
#--------------------------------------------------------------------------------
font pango:System San Francisco Display 9

set $bg-color            #444855
# set $bg-color            #2f343f
set $inactive-bg-color   #000000
set $text-color          #f3f4f5
set $inactive-text-color #676e7d
set $urgent-bg-color     #e53935

# Window colors
#                       Border             Background         Text                 Indicator
client.focused          $bg-color          $bg-color          $text-color          #003300
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #003300
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #003300
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          #003300

# Borders
hide_edge_borders both

workspace_auto_back_and_forth yes

# When new window opened, leave full-screen mode (I find I often forgot I am in full screen mode and have no idea why a window won't show up)
popup_during_fullscreen leave_fullscreen

# Bottom bar
bar {
	status_command i3blocks -c $HOME/.config/i3/i3blocks.conf
	font pango:System San Francisco Display 12
	colors {
		set $bar-bg-color            #2f343f
		set $bar-inactive-bg-color   #000000
		set $bar-text-color          #f3f4f5
		set $bar-inactive-text-color #676e7d
		set $bar-urgent-bg-color     #e53935

        background #000000
        separator #757575
        #                  border                 background             text
        focused_workspace  $bar-bg-color          $bar-bg-color          $bar-text-color
        inactive_workspace $bar-inactive-bg-color $bar-inactive-bg-color $bar-inactive-text-color
        urgent_workspace   $bar-urgent-bg-color   $bar-urgent-bg-color   $bar-text-color
	}

    strip_workspace_numbers yes
	position top
}


#--------------------------------------------------------------------------------
# Modifiers
#--------------------------------------------------------------------------------
set $mod Mod1
set $modWorkspace Mod4

floating_modifier $mod


#--------------------------------------------------------------------------------
# Hotkeys (all non window/workspace/launcher related)
#--------------------------------------------------------------------------------
# Typing assist: delete word/line, Go back/forward word, ...
# mod3+p: delete word
# mod3+o: delete character
# mod3+u: delete whole line (in vim/terminal)
# mod3+h: move back    a word
# mod3+l: move forward a word
# mod3+j: move back    a character
# mod3+k: move forward a character
# mod3+i: move to the end of the first word in line (mostly)
bindsym Mod3+p exec --no-startup-id autohotkey mod3+p
bindsym Mod3+u exec --no-startup-id xdotool keyup u key ctrl+u
bindsym Mod3+o exec --no-startup-id xdotool keyup o key BackSpace
bindsym Mod3+i exec --no-startup-id xdotool keyup i key ctrl+a key ctrl+Right # let you easily edit command line's command
bindsym Mod3+h exec --no-startup-id xdotool keyup h key ctrl+Left
bindsym Mod3+l exec --no-startup-id xdotool keyup l key ctrl+Right
bindsym Mod3+j exec --no-startup-id xdotool keyup j key Left
bindsym Mod3+k exec --no-startup-id xdotool keyup k key Right

# Terminal pageup/pagedown
# bindsym control+b exec --no-startup-id autohotkey ctrl+b
# bindsym control+f exec --no-startup-id autohotkey ctrl+f

# Brightness/color temperature (Mod3+b: toggle video/reading mode)
# https://github.com/haikarainen/light
bindsym Mod3+Down             exec --no-startup-id monitor-control bd && pkill -RTMIN+11 i3blocks
bindsym Mod3+Up               exec --no-startup-id monitor-control bu && pkill -RTMIN+11 i3blocks
bindsym Mod3+b                exec --no-startup-id monitor-control bs && pkill -RTMIN+11 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id monitor-control bd && pkill -RTMIN+11 i3blocks
bindsym XF86MonBrightnessUp   exec --no-startup-id monitor-control bu && pkill -RTMIN+11 i3blocks

# Media and volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse set Master 5%+    && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse set Master 5%-    && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute        exec --no-startup-id amixer -D pulse set Master toggle && pkill -RTMIN+10 i3blocks
bindsym Mod3+Shift+k   exec cmus-remote -u && pkill -RTMIN+12 i3blocks
bindsym Mod3+Shift+l   exec cmus-remote -n && pkill -RTMIN+12 i3blocks
bindsym Mod3+Shift+j   exec cmus-remote -r && pkill -RTMIN+12 i3blocks
bindsym XF86AudioPlay  exec cmus-remote -u && pkill -RTMIN+12 i3blocks
bindsym XF86AudioPause exec cmus-remote -u && pkill -RTMIN+12 i3blocks
bindsym XF86AudioNext  exec cmus-remote -n && pkill -RTMIN+12 i3blocks
bindsym XF86AudioPrev  exec cmus-remote -r && pkill -RTMIN+12 i3blocks

# Laptop function keys
bindsym XF86Display        exec --no-startup-id set-display-monitor
bindsym XF86ScreenSaver    exec --no-startup-id xset dpms force off
bindsym XF86TouchpadToggle exec --no-startup-id ~/bin/toggle-touchpad.sh

# Screenshot
bindsym Print      exec flameshot full   -p $HOME/Pictures
bindsym ctrl+Print exec flameshot gui    -p $HOME/Pictures
# bindsym Shift+Print exec flameshot screen -p $HOME/Pictures # only produces white images

# Turn off monitor / suspend
bindsym Pause       exec --no-startup-id xset dpms force off
bindsym Scroll_Lock exec --no-startup-id systemctl suspend

# Lock/logout
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you want to logout?' -B 'Yes, logout' 'i3-msg exit'"

# Restart/reload i3 config
bindsym $mod+Shift+r restart
bindsym $mod+Shift+c reload

# Left thumb mouse button at the bottom (new tab for web browser)
bindsym $mod+ctrl+Tab exec --no-startup-id xdotool keyup Tab ctrl alt key ctrl+t

#--------------------------------------------------------------------------------
# App launcher
#--------------------------------------------------------------------------------
# Not directly typed, but used by xcape binding
set_from_resource $rofiCombiWidth i3wm.rofi.combi.width
# Use Super as modifier to workaround a xdotool/xte and xcape compatibility problem.
#     If using mod+F12, mod+h/j/k/l followed by mod4/super will result in the alt key triggerd by mod4(xcape) missing
bindsym mod4+F12 exec rofi -show combi  -lines 5 -width $rofiCombiWidth -sidebar-mode 

# Quick launch (Mark for legacy as this feature is rarely used)
# bindsym $mod+o mode " Quick Launch "
# mode " Quick Launch " {
#     bindsym c exec google-chrome                      ; mode "default"
#     bindsym f exec firefox                            ; mode "default"
#     bindsym r exec $term -e ranger ~                  ; mode "default"
#     bindsym m exec $term -e cmus                      ; mode "default"
#     bindsym n exec nautilus                           ; mode "default"

# 	bindsym Escape mode "default"
# }


#--------------------------------------------------------------------------------
# Window management
#--------------------------------------------------------------------------------
# kill focused window
bindsym $mod+grave kill

# Change focus (with vim integration)
#    Leave fullscreen to allow focus change without leaving fullscreen first
bindsym $mod+h fullscreen disable, exec autohotkey mod+h
bindsym $mod+j fullscreen disable, exec autohotkey mod+j
bindsym $mod+k fullscreen disable, exec autohotkey mod+k
bindsym $mod+l fullscreen disable, exec autohotkey mod+l

# move focused window
set_from_resource $floatingDeltaX i3wm.floating.deltaX 64px
set_from_resource $floatingDeltaY i3wm.floating.deltaY 64px
bindsym $mod+Shift+h    move left  $floatingDeltaX
bindsym $mod+Shift+j    move down  $floatingDeltaY
bindsym $mod+Shift+k    move up    $floatingDeltaY
bindsym $mod+Shift+l    move right $floatingDeltaX
bindsym $mod+Shift+slash focus floating; exec --no-startup-id "toggle-window-bottom-position; i3-msg 'focus mode_toggle'"
# bindsym $mod+Shift+Left  move left  10px
# bindsym $mod+Shift+Up    move up    10px
# bindsym $mod+Shift+Down  move down  10px
# bindsym $mod+Shift+Right move right 10px

set_from_resource $resizeX i3wm.resizeX 10px or 7ppt
set_from_resource $resizeY i3wm.resizeY 10px or 7ppt

# resize window (you can also use the mouse for that)
bindsym $mod+Mod3+h resize shrink width  $resizeX
bindsym $mod+Mod3+k resize grow   height $resizeY
bindsym $mod+Mod3+j resize shrink height $resizeY
bindsym $mod+Mod3+l resize grow   width  $resizeX

# make window a horizontal split container
bindsym $mod+s split v
# make window a vertical split container
bindsym $mod+v split h

# change container layout (stacked/"deck", tabbed, toggle split)
bindsym $mod+f layout toggle split
bindsym $mod+d layout stacked
bindsym $mod+t layout tabbed
# equal width/height
bindsym $mod+equal resize set width 50ppt, resize set height 50ppt
# maximize (could also use full screen mode if one prefer)
bindsym $mod+z resize set width 99ppt, resize set height 90ppt
# minimize
# bindsym $mod+m resize set width  1ppt, resize set height 10ppt

bindsym F11 fullscreen toggle
# NOTE: full screen can be used on non-workspace container
bindsym Shift+F11 focus parent; fullscreen toggle; focus child

# floating
bindsym $mod+Shift+space floating toggle
# bindsym $mod+space focus mode_toggle
bindsym $mod+space focus mode_toggle; exec --no-startup-id autohotkey mod+space

# parent/child
# bindsym $mod+a focus parent
bindsym $mod+p focus parent
bindsym $mod+c focus child

# TODO: mark/unmark window


#--------------------------------------------------------------------------------
# Workspace management
#--------------------------------------------------------------------------------
set $ws1  "1: Web"
set $ws2  "2: Term"
set $ws3  "3: Code"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9: Git"
set $ws10 "10: File"

#
# Switch to workspace
#
bindsym $mod+Tab         workspace back_and_forth
bindsym $mod+1           workspace prev
bindsym $mod+2           workspace next
# bindsym $mod+1           workspace $ws1
# bindsym $mod+2           workspace $ws2
bindsym $mod+3           workspace $ws3
bindsym $mod+4           workspace $ws4
bindsym $mod+5           workspace $ws5
bindsym $mod+6           workspace $ws6
bindsym $mod+7           workspace $ws7
bindsym $mod+8           workspace $ws8
bindsym $mod+9           workspace $ws9
bindsym $mod+0           workspace $ws10

bindsym F1               workspace $ws1
bindsym F2               workspace $ws2
bindsym F3               workspace $ws3
bindsym F4               workspace $ws4

# Quake style terminal
# bindsym Mod3+semicolon    workspace $ws1
# Most used workspaces
# bindsym Mod3+apostrophe   workspace $ws2
# bindsym Mod3+bracketright workspace $ws4
# bindsym Mod3+bracketleft  workspace $ws7

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1 ; workspace $ws1 
bindsym $mod+Shift+2 move container to workspace $ws2 ; workspace $ws2 
bindsym $mod+Shift+3 move container to workspace $ws3 ; workspace $ws3 
bindsym $mod+Shift+4 move container to workspace $ws4 ; workspace $ws4 
bindsym $mod+Shift+5 move container to workspace $ws5 ; workspace $ws5 
bindsym $mod+Shift+6 move container to workspace $ws6 ; workspace $ws6 
bindsym $mod+Shift+7 move container to workspace $ws7 ; workspace $ws7 
bindsym $mod+Shift+8 move container to workspace $ws8 ; workspace $ws8 
bindsym $mod+Shift+9 move container to workspace $ws9 ; workspace $ws9 
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10


#--------------------------------------------------------------------------------
# Application profiles
#--------------------------------------------------------------------------------
# Terminal
set $term urxvtc
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec $term -cd $(xcwd)

# Bind application to workspace
# assign [class="Google-chrome"     ] $ws1
# assign [class="Firefox"           ] $ws1
assign [class="Code"                ] $ws3
assign [              title="ranger"] $ws10

for_window [class="URxvt" title="ranger"] border none, focus
for_window [class="Google-chrome"       ] border none
for_window [class="Firefox"             ] border none
for_window [class="Org.gnome.Nautilus"  ] border none
for_window [class="Code"                ] border none, focus
# floating bottom right corner with 25% of screen size
# for_window [class="mpv"                 ] border none, floating enable, sticky enable
# no_focus [class="mpv"]
for_window [class="Sxiv"                ] border none, floating enable,                fullscreen
for_window [class="qBittorrent"         ]              floating enable,                            move center


#--------------------------------------------------------------------------------
# Scratchpad (notebook)
# NOTE: Notebook and cmus uses lazy execution (won't execute until first accessing)
#--------------------------------------------------------------------------------
# Notebook (tmux)
bindsym Mod3+n exec i3-floating-singleton tmux
bindsym Mod3+m exec i3-floating-singleton cmus
bindsym Mod3+v [class="^mpv"] scratchpad show, fullscreen enable
# Show all scratchpad not the above tmux
# bindsym $mod+n [instance="^(?!tmux).*"] scratchpad show
# bindsym $mod+Shift+n move scratchpad

set_from_resource $tmuxSize i3wm.tmux.size 60 ppt 70 ppt
set_from_resource $cmusSize i3wm.cmus.size 80 ppt 80 ppt
for_window [instance="^tmux$"] border pixel 2 , floating enable, resize set $tmuxSize, move scratchpad
for_window [instance="^cmus$"] border pixel 2 , floating enable, resize set $cmusSize, move scratchpad
for_window [class="mpv"      ] border pixel 10, floating enable, sticky enable       , move scratchpad, scratchpad show


#--------------------------------------------------------------------------------
# Gaps (i3-gaps is a fork from i3.  Thus, group related settings)
#     Pixel size: displayWidth / scaleFactor (1.25 on desktop)
#--------------------------------------------------------------------------------
# for_window [class=".*"] border pixel 10

# smart_gaps inverse_outer # When there is only one window, disable gaps
smart_borders on # Only has border when there are multiple windows

set_from_resource $ws1HGap  i3wm.ws1.horizontalGap  0
set_from_resource $ws2HGap  i3wm.ws2.horizontalGap  0
set_from_resource $ws3HGap  i3wm.ws3.horizontalGap  0
set_from_resource $ws4HGap  i3wm.ws4.horizontalGap  0
set_from_resource $ws5HGap  i3wm.ws5.horizontalGap  0
set_from_resource $ws6HGap  i3wm.ws6.horizontalGap  0
set_from_resource $ws7HGap  i3wm.ws7.horizontalGap  0
set_from_resource $ws8HGap  i3wm.ws8.horizontalGap  0
set_from_resource $ws9HGap  i3wm.ws9.horizontalGap  0
set_from_resource $ws10HGap i3wm.ws10.horizontalGap 0

set_from_resource $ws1VGap  i3wm.ws1.verticalGap  0
set_from_resource $ws2VGap  i3wm.ws2.verticalGap  0
set_from_resource $ws3VGap  i3wm.ws3.verticalGap  0
set_from_resource $ws4VGap  i3wm.ws4.verticalGap  0
set_from_resource $ws5VGap  i3wm.ws5.verticalGap  0
set_from_resource $ws6VGap  i3wm.ws6.verticalGap  0
set_from_resource $ws7VGap  i3wm.ws7.verticalGap  0
set_from_resource $ws8VGap  i3wm.ws8.verticalGap  0
set_from_resource $ws9VGap  i3wm.ws9.verticalGap  0
set_from_resource $ws10VGap i3wm.ws10.verticalGap 0

workspace $ws1  gaps horizontal $ws1HGap
workspace $ws2  gaps horizontal $ws2HGap
workspace $ws3  gaps horizontal $ws3HGap
workspace $ws4  gaps horizontal $ws4HGap
workspace $ws5  gaps horizontal $ws5HGap
workspace $ws6  gaps horizontal $ws6HGap
workspace $ws7  gaps horizontal $ws7HGap
workspace $ws8  gaps horizontal $ws8HGap
workspace $ws9  gaps horizontal $ws9HGap
workspace $ws10 gaps horizontal $ws10HGap

workspace $ws1  gaps vertical $ws1VGap
workspace $ws2  gaps vertical $ws2VGap
workspace $ws3  gaps vertical $ws3VGap
workspace $ws4  gaps vertical $ws4VGap
workspace $ws5  gaps vertical $ws5VGap
workspace $ws6  gaps vertical $ws6VGap
workspace $ws7  gaps vertical $ws7VGap
workspace $ws8  gaps vertical $ws8VGap
workspace $ws9  gaps vertical $ws9VGap
workspace $ws10 gaps vertical $ws10VGap

# resolution
set_from_resource $toggleHGap i3wm.toggleHGap 0
bindsym $mod+r gaps horizontal current toggle $toggleHGap


#--------------------------------------------------------------------------------
# Startup scripts
# NOTE: Non-i3 specific commands moved to ~/.profile
#--------------------------------------------------------------------------------
# Startup programs
exec i3-msg 'workspace $ws2; exec $term'

#
# System config and daemons
#
# Black background
exec xsetroot -solid "#000000"
# Auto-hide cursor
exec --no-startup-id unclutter
# Workaround brightness value cannot be read until several seconds after booting
exec --no-startup-id sleep 5 && pkill -RTMIN+11 i3blocks
# If in .profile, it sometimes won't work correctly
exec --no-startup-id activate-hotkeys

