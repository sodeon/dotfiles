# i3 config file (v4)
#
# ,: used for chaining commands using the previous matching window
# ;: usef for chaining commands without using the previous matcheing window
#
# NOTE: To make a window a container, the only way to do is explicitly make it a split container (mod+h/s) then change to desired layout mode (split/tabbed/stacked)

#--------------------------------------------------------------------------------
# Looks
#--------------------------------------------------------------------------------
# Make title bar a very slim line
font pango:Ubuntu 0
# font pango:System San Francisco Display 9

set $bg-color            #444444
# set $bg-color            #444855
# set $bg-color            #2f343f
set $inactive-bg-color   #000000
set $text-color          #f3f4f5
set $inactive-text-color #676e7d
set $urgent-bg-color     #e53935
set $indicator-color     #000000

# Window colors
#                       Border             Background         Text                 Indicator
client.focused          $bg-color          $bg-color          $text-color          $indicator-color
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color $indicator-color
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color $indicator-color
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          $indicator-color

# Borders
for_window [class=".*"] border pixel 2
hide_edge_borders both

workspace_auto_back_and_forth yes

# When new window opened, leave full-screen mode (I find I often forgot I am in full screen mode and have no idea why a window won't show up)
popup_during_fullscreen leave_fullscreen

# Bottom bar
bar {
	status_command i3blocks -c $HOME/.config/i3/i3blocks.conf
	font pango:Ubuntu 13
	# font pango:System San Francisco Display 12
	colors {
		set $bar-bg-color            #2f343f
		set $bar-inactive-bg-color   #000000
		set $bar-text-color          #f3f4f5
		set $bar-inactive-text-color #676e7d
		# set $bar-urgent-bg-color     #e53935
		set $bar-urgent-bg-color     #000000
        set $bar-urgent-text-color   #ff7777

        background #000000
        separator #757575
        #                  border                 background             text
        focused_workspace  $bar-bg-color          $bar-bg-color          $bar-text-color
        inactive_workspace $bar-inactive-bg-color $bar-inactive-bg-color $bar-inactive-text-color
        urgent_workspace   $bar-urgent-bg-color   $bar-urgent-bg-color   $bar-urgent-text-color
	}

    strip_workspace_numbers yes
	position top
}


#--------------------------------------------------------------------------------
# Modifiers
#--------------------------------------------------------------------------------
set $mod Mod1
floating_modifier $mod


#--------------------------------------------------------------------------------
# Hotkeys (all non window/workspace/launcher related)
#--------------------------------------------------------------------------------
# Typing assist: delete word/line, Go back/forward word, ...
# Binding all Up/Down/Left/Right/Home/End frees hand from moving for typing
# mod3+p/u/o: delete word/line/character (delete line for terminal and vim only)
# mod3+h/l  : move back/forward a word
# mod3+j/k  : up/down
# mod3+m/,  : left/right
# mod3+n/.  : home/end
bindsym Mod3+o       exec --no-startup-id xdotool keyup o key BackSpace
bindsym Mod3+p       exec --no-startup-id autohotkey deleteWord
bindsym Mod3+u       exec --no-startup-id xdotool keyup u key ctrl+u

bindsym Mod3+h       exec --no-startup-id xdotool keyup h key ctrl+Left
bindsym Mod3+Shift+h exec --no-startup-id xdotool keyup h key ctrl+Left
bindsym Mod3+l       exec --no-startup-id xdotool keyup l key ctrl+Right
bindsym Mod3+Shift+l exec --no-startup-id xdotool keyup l key ctrl+Right
bindsym Mod3+j       exec --no-startup-id autohotkey xdotool-forward keyup j key Down
bindsym Mod3+Shift+j exec --no-startup-id autohotkey xdotool-forward keyup j key Down
bindsym Mod3+k       exec --no-startup-id autohotkey xdotool-forward keyup k key Up
bindsym Mod3+Shift+k exec --no-startup-id autohotkey xdotool-forward keyup k key Up

bindsym Mod3+m           exec --no-startup-id autohotkey xdotool-forward keyup m      key Left
bindsym Mod3+Shift+m     exec --no-startup-id autohotkey xdotool-forward keyup m      key Left
bindsym Mod3+comma       exec --no-startup-id autohotkey xdotool-forward keyup comma  key Right
bindsym Mod3+Shift+comma exec --no-startup-id autohotkey xdotool-forward keyup comma  key Right
bindsym Mod3+n           exec --no-startup-id xdotool keyup n      key Home
bindsym Mod3+period      exec --no-startup-id xdotool keyup period key End

# Brightness/color temperature (Mod3+b: toggle video/reading mode)
# https://github.com/haikarainen/light
bindsym Mod3+Down             exec --no-startup-id monitor-control bd && pkill -RTMIN+11 i3blocks
bindsym Mod3+Up               exec --no-startup-id monitor-control bu && pkill -RTMIN+11 i3blocks
bindsym Mod3+b                exec --no-startup-id monitor-control bs && pkill -RTMIN+11 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id monitor-control bd && pkill -RTMIN+11 i3blocks
bindsym XF86MonBrightnessUp   exec --no-startup-id monitor-control bu && pkill -RTMIN+11 i3blocks

# Media and volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse set Master 5%+    && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse set Master 5%-    && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute        exec --no-startup-id amixer -D pulse set Master toggle && pkill -RTMIN+10 i3blocks
bindsym Mod3+space     exec --no-startup-id autohotkey pause 
bindsym Mod3+Right     exec --no-startup-id autohotkey nextTrack
bindsym Mod3+Left      exec --no-startup-id autohotkey prevTrack
bindsym XF86AudioPlay  exec --no-startup-id autohotkey pause
bindsym XF86AudioPause exec --no-startup-id autohotkey pause
bindsym XF86AudioNext  exec --no-startup-id autohotkey nextTrack
bindsym XF86AudioPrev  exec --no-startup-id autohotkey prevTrack
bindsym Mod3+s         exec --no-startup-id switch-sound-output && pkill -RTMIN+10 i3blocks

# Laptop function keys
bindsym XF86Display        exec --no-startup-id set-display-monitor
bindsym XF86ScreenSaver    exec --no-startup-id xset dpms force off
bindsym XF86TouchpadToggle exec --no-startup-id toggle-touchpad

# Screenshot
bindsym Print      exec flameshot full   -p $HOME/Pictures
bindsym ctrl+Print exec flameshot gui    -p $HOME/Pictures
# bindsym Shift+Print exec flameshot screen -p $HOME/Pictures # only produces white images

# Turn off monitor / suspend
bindsym Pause       exec --no-startup-id xset dpms force off
bindsym Scroll_Lock exec --no-startup-id systemctl suspend

# Lock/logout
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you want to logout?' -B 'Yes, logout' 'i3-msg exit'"

# Restart/reload i3 config
bindsym $mod+Shift+r restart
# bindsym $mod+Shift+c reload

# Logitech M720 left thumb mouse button at the bottom (new tab for web browser)
bindsym $mod+ctrl+Tab exec --no-startup-id xdotool keyup Tab ctrl alt key ctrl+t

#--------------------------------------------------------------------------------
# App launcher
#--------------------------------------------------------------------------------
# Not directly typed, but used by xcape binding
set_from_resource $rofiCombiWidth i3wm.rofi.combi.width
# Use Super as modifier to workaround a xdotool/xte and xcape compatibility problem.
#     If using mod+F12, mod+h/j/k/l followed by mod4/super will result in the alt key triggerd by mod4(xcape) missing
bindsym mod4+F12 exec rofi -show combi  -lines 5 -width $rofiCombiWidth -sidebar-mode 


#--------------------------------------------------------------------------------
# Window management
#--------------------------------------------------------------------------------
# Kill focused window
bindsym $mod+grave kill

# Change focus (with vim integration)
#    Leave fullscreen to allow focus change without leaving fullscreen first
bindsym $mod+h exec --no-startup-id autohotkey focusWindow left
bindsym $mod+j exec --no-startup-id autohotkey focusWindow down
bindsym $mod+k exec --no-startup-id autohotkey focusWindow up
bindsym $mod+l exec --no-startup-id autohotkey focusWindow right

# Move focused window (Disable vim/i3/tmux integration. All these have different window movement mechanisms. Behavior after integration is just wierd and inconsistent.)
set_from_resource $floatingDeltaX i3wm.floating.deltaX 64px
set_from_resource $floatingDeltaY i3wm.floating.deltaY 64px
bindsym $mod+Shift+h move left  $floatingDeltaX
bindsym $mod+Shift+j move down  $floatingDeltaY
bindsym $mod+Shift+k move up    $floatingDeltaY
bindsym $mod+Shift+l move right $floatingDeltaX
# bindsym $mod+Shift+h exec --no-startup-id autohotkey moveWindow left  $floatingDeltaX
# bindsym $mod+Shift+j exec --no-startup-id autohotkey moveWindow down  $floatingDeltaY
# bindsym $mod+Shift+k exec --no-startup-id autohotkey moveWindow up    $floatingDeltaY
# bindsym $mod+Shift+l exec --no-startup-id autohotkey moveWindow right $floatingDeltaX

# Resize window
set_from_resource $resizeX i3wm.resizeX 10px or 7ppt
set_from_resource $resizeY i3wm.resizeY 10px or 7ppt
bindsym $mod+control+h exec --no-startup-id autohotkey resizeWindow shrink width  $resizeX
bindsym $mod+control+k exec --no-startup-id autohotkey resizeWindow grow   height $resizeY
bindsym $mod+control+j exec --no-startup-id autohotkey resizeWindow shrink height $resizeY
bindsym $mod+control+l exec --no-startup-id autohotkey resizeWindow grow   width  $resizeX

# Make window a horizontal split container
bindsym $mod+s split v
# Make window a vertical split container
bindsym $mod+v split h

# Change container layout (stacked, tabbed, toggle split). For my workflow, I only use split and stacked.
bindsym $mod+f layout toggle split
bindsym $mod+a layout stacked
bindsym $mod+t layout tabbed
# Equal width/height
bindsym $mod+equal resize set width 50ppt, resize set height 50ppt
# Maximize (full screen)
bindsym F11 exec --no-startup-id autohotkey toggleFullscreen
# NOTE: full screen can be used on non-workspace container
# bindsym Shift+F11 focus parent; fullscreen toggle; focus child

# Floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle; exec --no-startup-id autohotkey toggleFloating

# Toggle floating window between bottom left and right
bindsym $mod+slash exec --no-startup-id "toggle-window-bottom-position; i3-msg 'focus mode_toggle'; toggle-window-bottom-position; i3-msg 'focus mode_toggle'"

# parent/child
bindsym $mod+p focus parent
bindsym $mod+c focus child

# TODO: mark/unmark window

# Scroll mode and terminal pageup/pagedown
bindsym Prior exec --no-startup-id autohotkey pageup   Prior
bindsym Next  exec --no-startup-id autohotkey pagedown Next
# "g"o to
# bindsym Mod3+g mode " Scroll "
# mode " Scroll " {
#     bindsym j exec --no-startup-id autohotkey scroll Down  j
#     bindsym k exec --no-startup-id autohotkey scroll Up    k
#     bindsym c exec --no-startup-id autohotkey scroll Next  c
#     bindsym v exec --no-startup-id autohotkey scroll Prior v
# 	bindsym Escape mode "default"
# }


# Alternate mode for window management (e.g. to jump out of vim/tmux integration)
# NOTE: gap adjustment is also here
bindsym $mod+o mode " Organize Windows "
mode " Organize Windows " {
    # bindsym $mod+Return exec $term -cd $(xcwd); mode "default"
    bindsym $mod+h fullscreen disable, focus left , mode "default"
    bindsym $mod+j fullscreen disable, focus down , mode "default"
    bindsym $mod+k fullscreen disable, focus up   , mode "default"
    bindsym $mod+l fullscreen disable, focus right, mode "default"

	bindsym $mod+Shift+h move left  $floatingDeltaX, mode "default"
	bindsym $mod+Shift+j move down  $floatingDeltaY, mode "default"
	bindsym $mod+Shift+k move up    $floatingDeltaY, mode "default"
	bindsym $mod+Shift+l move right $floatingDeltaX, mode "default"

	bindsym $mod+control+h resize shrink width  $resizeX
	bindsym $mod+control+k resize grow   height $resizeY
	bindsym $mod+control+j resize shrink height $resizeY
	bindsym $mod+control+l resize grow   width  $resizeX

    set_from_resource $hGapStep i3wm.horizontalGapStep 32
    set_from_resource $vGapStep i3wm.verticalGapStep   32
    bindsym h gaps horizontal current plus  $hGapStep
    bindsym l gaps horizontal current minus $hGapStep
    bindsym j gaps vertical   current plus  $vGapStep
    bindsym k gaps vertical   current minus $vGapStep

	bindsym $mod+o mode "default"
	bindsym Escape mode "default"
}

# Dummy mode that will not grab keys
# bindsym Mod3+a mode " "
mode " " {
	bindsym Escape mode "default"
}


