From 845505d489a930908c9b2bb21b653689ce0b8164 Mon Sep 17 00:00:00 2001
From: sodeon <sodeon@gmail.com>
Date: Thu, 2 May 2019 20:14:21 +0800
Subject: [PATCH] Modify keybindings to unify Windows/Linux. Auto-hide status
 bar in full screen

---
 options.c |  6 +++++-
 window.c  | 12 ++++++++++++
 2 files changed, 17 insertions(+), 1 deletion(-)

diff --git a/options.c b/options.c
index de02407..b63deb3 100644
--- a/options.c
+++ b/options.c
@@ -63,7 +63,11 @@ void parse_options(int argc, char **argv)
 
 	_options.fullscreen = false;
 	_options.embed = 0;
-	_options.hide_bar = false;
+    /* Andy */
+    /* Disable status bar on startup */
+	_options.hide_bar = true;
+	/* _options.hide_bar = false; */
+    /* End of Andy */
 	_options.geometry = NULL;
 	_options.res_name = NULL;
 
diff --git a/window.c b/window.c
index b41d6c1..d218257 100644
--- a/window.c
+++ b/window.c
@@ -353,6 +353,18 @@ void win_toggle_fullscreen(win_t *win)
 	}
 	win->fullscreen = !win->fullscreen;
 
+    /* Andy */
+    /* Disable status bar in full screen */
+    /* Enable  status bar in window */
+	if (!win->fullscreen) {
+		win->bar.h = barheight;
+		win->h -= win->bar.h;
+	} else {
+		win->h += win->bar.h;
+		win->bar.h = 0;
+	}
+    /* End of Andy */
+
 	memset(&ev, 0, sizeof(ev));
 	ev.type = ClientMessage;
 
