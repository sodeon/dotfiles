!-------------------------------------------------------------------
! Reload: Xmodmap ~/.Xmodmap
!-------------------------------------------------------------------
! Assign Ctrl to Mode_switch and map Alt_Gr (normal Mode_switch) to Alt_R
keycode 37 = Mode_switch
remove control = Mode_switch
add mod5 = Mode_switch

! Assign CapsLock to Ctrl
clear Lock
keycode 66 = Control_L
add control = Control_L

! Typing assist
! o/d    : backspace/del
! h/l/j/k: left/right/up/down (like vim)
! m/,    : pagedown/pageup
! f/b    : pagedown/pageup (like vim)
! 0/4    : home/end (like vim)
keycode 32 = o O BackSpace
keycode 40 = d D Delete
keycode 43 = h H Left
keycode 44 = j J Down
keycode 45 = k K Up
keycode 46 = l L Right
keycode 58 = m M Next
keycode 59 = comma less Prior
keycode 41 = f F Next
keycode 56 = b B Prior
keycode 19 = 0 parenright Home
keycode 13 = 4 dollar End

! Numpad (TODO: use keycode instead)
! keysym KP_Multiply = XF86AudioRaiseVolume
! keysym KP_Subtract = XF86AudioLowerVolume


!-------------------------------------------------------------------
! Mouse button layers
!-------------------------------------------------------------------
keycode 194 = Hyper_L
remove mod4 = Hyper_L
add mod3 = Hyper_L
keycode 198 = XF86Launch7


